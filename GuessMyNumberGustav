import random

def main():
    correct_number = random.randint(1, 6)

    guess = int(input("Pick a number from 1 to 6."))

    if guess == correct_number: 
        print("You have guessed the right number, good job!", correct_number)
    else: 
        print("Unfortunately, you guessed it wrong.")
        print("The correct number was", correct_number)

if __name__ == "__main__":
    main()

main ()
