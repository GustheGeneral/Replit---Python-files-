def sum_calculator():
    user_input = int(input("Enter a positive integer here: "))

    if user_input <= 0:
        print("Enter a positive integer, please.")
        return

    total_sum = 0
    for i in range(user_input + 1):
        total_sum += i

    print(f"The sum of all numbers from 1 to {user_input} is {total_sum}")

sum_calculator() 
